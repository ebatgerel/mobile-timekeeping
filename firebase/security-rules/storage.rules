rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function orgId() { return request.auth.token.org_id; }
    function isManager() { return request.auth.token.role == 'manager'; }

    // uploads/{orgId}/{folder}/{filename}
    match /uploads/{org}/{folder}/{file} {
      allow read: if isSignedIn() && org == orgId();
      allow write: if isSignedIn() && org == orgId();
    }

    // payroll/{orgId}/{filename}
    match /payroll/{org}/{file} {
      allow read, write: if isSignedIn() && org == orgId() && isManager();
    }
  }
}
